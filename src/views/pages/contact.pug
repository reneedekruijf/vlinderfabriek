            input(type="hidden" name="bad_url" value="../pages/contact-niet-verzonden.html")
            input(type="hidden" name="subject" value="contactformulier")
            input(type="hidden" name="derive_fields" value="imgverify=g-recaptcha-response")
            //- input(type="hidden" name="Locatie" value="contactformulier")
            fieldset
                label(for="nameField") naam&#42;
                    input(name="name" type="text" id="nameField" required pattern="^[a-zA-Z ]*$" placeholder="bijv Joep Jansen" title="gebruik alleen letters en geen cijfers")
                label(for="subjectField") onderwerp
                    input(name="onderwerp" type="text"  id="subjectField" placeholder="bijv informatie over de lessen" title="vul hier een onderwerp in")
                label(for="emailField") email&#42;
