                li Stichting de Vlinderfabriek
                li KvK-nummer&colon; 54730597
                li IBAN nummer&colon; NL70RABO0122381270
                li 
                    span(class="fontSizeNone") lege rij
                li Onze voorwaarden &amp; privacy beleid 
                 a(href="privacy.html") privacy &amp; voorwaarden
        form(id="contactForm" class="form form__contactForm" method="post" action="../php/formmailContact.php" enctype="multipart/form-data" autocomplete="on")
            input(type="hidden" name="env_report" value="REMOTE_HOST,REMOTE_ADDR,HTTP_USER_AGENT,AUTH_TYPE,REMOTE_USER")
            input(type="hidden" name="recipients" value="administratie@vlinderfabriek.nl, info@vlinderfabriek.nl")
