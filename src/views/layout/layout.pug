doctype html
html(lang="nl")
    block head
        head
            meta(charset="UTF-8") 
            meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=3.0, minimum-scale=1.0, user-scalable=yes") 
            meta(http-equiv="X-UA-Compatible" content="ie=edge")
            meta(name="robots" content="all")
            meta(name="description" content="De Vlinderfabriek wil kinderen en jongeren het creatieve & grenzeloze van theater laten ontdekken.")
            meta(name="copyright" content="Copyright Webdesignpuntnl Culemborg")
            link(rel="apple-touch-icon" sizes="76x76" href="../apple-touch-icon.png")
            link(rel="icon" type="image/png" sizes="32x32" href="../favicon-32x32.png")
            link(rel="icon" type="image/png" sizes="16x16" href="../favicon-16x16.png")
            link(rel="manifest" href="../site.webmanifest")
            link(rel="mask-icon" href="../safari-pinned-tab.svg" color="#5bbad5")
            meta(name="msapplication-TileColor" content="#ffc40d")
            meta(name="theme-color" content="#ffffff") 
            meta(property="og:title" content="Vlinderfabriek")
            meta(property="og:description" content="Jeugdtheater en workshops voor scholen, kinderen en volwassenen")
            meta(property="og:type" content="theater eduactie")
            meta(property="og:url" content="https://www.vlinderfabriek.nl")
            meta(property="og:image" content="http://www.vlinderfabriek.nl/images/fabriek-bluep.svg")       
            
            title Vlinderfabriek - #{title} 
            block contactScript
    body
        div(class="pageWrapper" id="backToTop")
            block header
                header
                    div
                        a(href="../index.html" class="header__link")
                            object(type="image/svg+xml", data=`../images/fabriek-${color}.svg` class="header__logo")
                            //- img(src=`../images/fabriek-${color}.svg` alt="logo" class="header__logo")
                        a(href="../index.html")
                            img(src="../images/woordlogo.png" alt="logo" class="header__wordlogo")
                    block navigation
                        nav
                            ul(class="butterflys")
                                li
                                    a(href="../pages/verdieping.html" class=(color == "green" ? "butterflys__active--green" : ''))
                                        img(src=(color == "green" ? "../images/vlinder-groen.png"  : "../images/vlinder-groen-outline.png") alt="verdieping")
                                        span verdieping
                                li
                                    a(href="../pages/breda.html" class=(color == "red" ? "butterflys__active--red" : ''))
                                        img(src=(color == "red" ? "../images/vlinder-rood.png"  : "../images/vlinder-rood-outline.png") alt="lesaanbod")
                                        span lesaanbod
                                li
                                    a(href="../pages/op-school.html" class=(color == "orange" ? "butterflys__active--orange" : ''))
                                        img(src=(color == "orange" ? "../images/vlinder-oranje.png"  : "../images/vlinder-oranje-outline.png") alt="op School")
                                        span op school
                                li
                                    a(href="../index.html" class=(color == "blue" ? "butterflys__active--blue" : ''))
                                        img(src=(color == "blue" ? "../images/vlinder-blauw.png"  : "../images/vlinder-blauw-outline.png") alt="home")
                                        span home
                            block buttons 
            block content
        block footer
            footer(class=`footer footer--${color}`)
                a(class="footer__link" href="#backToTop")
                    img(class="footer__link__arrow" src=`../images/pijl-terug-${color}.png` alt="klik voor terug omhoog" title="klik voor terug omhoog")
                a(class="footer__link" href="https://www.facebook.com/De-Vlinderfabriek-365229100205779/" target="_blank")
                    img(class="footer__link__facebookLogo" src="../images/logo-facebook-normal.svg" alt="facebook" title="facebook")
                a(class="footer__link footer__link__copyright" href="https://www.webdesignpuntnl.com") &copy; Webdesignpuntnl   
                a(class="footer__link footer__link__cookieSetup" href="#" id="noat-cookie-consent__setup") cookie instellingen   

        block scripts
            <!-- Global site tag (gtag.js) - Google Analytics -->
            script(async src="https://www.googletagmanager.com/gtag/js?id=UA-63079670-1")
            script.
                 window.dataLayer = window.dataLayer || [];
                 function gtag(){dataLayer.push(arguments);}
                 gtag('js', new Date());
                 gtag('config', 'UA-63079670-1', { 'anonymize_ip': true });
