                                        span op school
                                li
                                    a(href="#" class="butterflys__active--blue")
                                        img(src="images/vlinder-blauw.png" alt="home")
                                        span home
                            ul(class="buttons buttons--blue")
                                li
                                    a(href="#" class="buttons__active--blue" title="nieuws") nieuws
                                li
                                    a(href="pages/over-ons.html" title="over ons") over ons
                                li
                                    a(href="pages/wie-zijn-wij.html" title="wij zijn wij") wij zijn wij
                                li
                                    a(href="pages/contact.html" title="contact") contact
                                li
                                    a(href="pages/achter-de-schermen.html" title="bestuur") bestuur
                                li
                                    a(href="pages/privacy.html" title="privacy") privacy
            block content
        block footer
            footer(class="footer footer--blue")
                a(class="footer__link" href="#backToTop")
                    img(class="footer__link__arrow" src="images/pijl-terug-blue.png" alt="klik voor terug omhoog" title="klik voor terug omhoog")
