        title Stichting de Vlinderfabriek - #{title} 
    body
        div(class="pageWrapper" id="backToTop")
            block header
                header
                    div
                        a(href="../index.html")
                            img(src="images/fabriek-blue.svg" alt="logo" class="header__logo")
                        a(href="../index.html")
                            img(src="images/woordlogo.png" alt="logo" class="header__wordlogo")
                    block navigation
                        nav
                            ul(class="butterflys")
                                li
                                    a(href="pages/verdieping.html")
                                        img(src="images/vlinder-groen-outline.png" alt="verdieping")
